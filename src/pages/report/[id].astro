---
const { id } = Astro.params;

const res = await fetch(
  `https://api.spaceflightnewsapi.net/v3/reports/${id}`
);

const reports = await res.json();

---

<div class=" m-12 text-primary-accent ">
    <h1 class="pb-4 text-4xl">{reports.title}</h1>
    <h2 class="pb-4 text-slate-500 text-2xl">{reports.newsSite}</h2>
    <div class="flex flex-col justify-center">
        <img src={reports.imageUrl} class=" w-auto h-auto" />
        <div class=" mt-6 bg-slate-100 p-6">
        <p class="mt-4 text-xl">{reports.summary}</p>
        </div>
    </div>
</div>
